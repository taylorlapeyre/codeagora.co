!!!
%html
  %head
    %title Agora
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %link{:href => image_url('favicon.ico'), :rel => 'icon', :type => 'image/x-icon'}
    = stylesheet_link_tag "//brick.a.ssl.fastly.net/Source+Sans+Pro:400,600/Source+Code+Pro:400"
    = stylesheet_link_tag "//fonts.googleapis.com/css?family=Oswald:400"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = aced_tag
    = csrf_meta_tags
  %body
    = render 'layouts/header'
    - if flash.any?
      - flash.each do |key, value|
        .clearfix{:class => "alert #{key}"}
          .container
            %strong= value
    - if signed_in? && current_user.unread_notifications.any?
      = render current_user.unread_notifications

    = yield

    = render 'layouts/tracking'
