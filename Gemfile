source 'https://rubygems.org'

# basic
gem 'rails', '4.0.4'
gem 'pg'
gem 'jbuilder'

# misc
gem 'bcrypt-ruby'
gem 'pygmentize'
gem 'select2-rails'
gem 'rdiscount'

# assets
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'haml'
gem 'aced_rails', :git => 'git://github.com/selbyk/aced_rails.git'

# social
gem 'omniauth-github'

# heroku
gem 'rails_12factor', group: :production

group :development do
  gem 'better_errors'
  gem 'meta_request'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'guard'
  gem 'guard-rspec'
end
